<Directory /var/www/<%= scope['install_dir'] %>/>
  Options -Indexes
  <Files wp-login.php>
     Order Deny,Allow
	<% if scope['wordpress::settings']['wp_web_settings']['apache_deny_from'] -%>
	 Deny from <%= scope['wordpress::settings']['wp_web_settings']['apache_deny_from'] %>
	<% end -%>
  </Files>

   <Files readme.html>
     Order Deny,Allow
   </Files>

   <IfModule mod_rewrite.c>
     RewriteEngine On
     RewriteBase /<%= scope['install_dir'] %>/
     RewriteRule ^index\.php$ - [L]
     RewriteCond %{REQUEST_FILENAME} !-f
     RewriteCond %{REQUEST_FILENAME} !-d
     RewriteRule . /<%= scope['install_dir'] %>/index.php [L]
   </IfModule>
</Directory>

<Directory /var/www/<%= scope['install_dir'] %>/wp-admin/>
  Order Deny,Allow
</Directory>
