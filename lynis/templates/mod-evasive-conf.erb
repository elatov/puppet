<IfModule mod_evasive20.c>
   DOSHashTableSize 3097
   DOSPageCount 2
   DOSSiteCount 50
   DOSPageInterval 1
   DOSSiteInterval 1
   DOSBlockingPeriod 60
   DOSEmailNotify <%= scope['lynis::settings']['tests']['HTTP-6640_email'] %>
   DOSLogDir "<%= scope['lynis::settings']['tests']['HTTP-6640_logdir'] %>"
<% if scope['lynis::settings']['tests']['HTTP-6640_doswhitelist'] -%>
   DOSWhitelist <%= scope['lynis::settings']['tests']['HTTP-6640_doswhitelist'] %>
<% end -%>
 </IfModule>