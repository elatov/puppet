<Directory /var/www/<%= @instance_name %>/>
  <Files wp-login.php>
     Order Deny,Allow
     Deny from all
     #Allow from 50.134.151.233 192.168.1.1/255.255.255.0
     Allow from 192.168.1.0/255.255.255.0
   </Files>

   <IfModule mod_rewrite.c>
     RewriteEngine On
     RewriteBase /<%= @instance_name %>/
     RewriteRule ^index\.php$ - [L]
     RewriteCond %{REQUEST_FILENAME} !-f
     RewriteCond %{REQUEST_FILENAME} !-d
     RewriteRule . /<%= @instance_name %>/index.php [L]
   </IfModule>
</Directory>

