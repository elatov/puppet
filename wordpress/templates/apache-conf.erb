<Directory /var/www/<%= scope['install_dir'] %>/>
  Options -Indexes
  <Files wp-login.php>
     Order Deny,Allow
<% scope['wordpress::settings']['wp_web_settings']['apache_deny_from'].each do |deny| -%>
     Deny from <%= deny %>
<% end -%>
<% scope['wordpress::settings']['wp_web_settings']['apache_allow_from'].each do |allow| -%>
     Allow from <%= allow %>
<% end -%>
   </Files>

   <Files readme.html>
     Order Deny,Allow
     <% scope['wordpress::settings']['wp_web_settings']['apache_deny_from'].each do |deny| -%>
     Deny from <%= deny %>
     <% end -%>
     <% scope['wordpress::settings']['wp_web_settings']['apache_allow_from'].each do |allow| -%>
     Allow from <%= allow %>
     <% end -%>
   </Files>

   <IfModule mod_rewrite.c>
     RewriteEngine On
     RewriteBase /<%= scope['install_dir'] %>/
     RewriteRule ^index\.php$ - [L]
     RewriteCond %{REQUEST_FILENAME} !-f
     RewriteCond %{REQUEST_FILENAME} !-d
     RewriteRule . /<%= scope['install_dir'] %>/index.php [L]
   </IfModule>
</Directory>

<Directory /var/www/<%= scope['install_dir'] %>/wp-admin/>
  Order Deny,Allow
  <% scope['wordpress::settings']['wp_web_settings']['apache_deny_from'].each do |deny| -%>
  Deny from <%= deny %>
  <% end -%>
  <% scope['wordpress::settings']['wp_web_settings']['apache_allow_from'].each do |allow| -%>
  Allow from <%= allow %>
  <% end -%>
</Directory>
