# == Class <%= metadata.name %>::params
#
# This class is meant to be called from <%= metadata.name %>
# It sets variables according to platform
#
class <%= metadata.name %>::params {

	$<%= metadata.name %>_settings_all	=	{ 'user' 	=> 'test',
											  'host'	=> $::hostname,
											}
	case $::osfamily {
		'Debian': {
			### Packages
			$<%= metadata.name %>_package_name		= '<%= metadata.name %>'
			### Services
			$<%= metadata.name %>_service_name		= '<%= metadata.name %>'
			### Dirs
			$<%= metadata.name %>_config_dir			= '/etc/default'
			$<%= metadata.name %>_service_dir			= '/etc/init.d'
			$<%= metadata.name %>_home_dir					= '/usr/local/<%= metadata.name %>'
			### Conf Files
			$<%= metadata.name %>_config_file			= '<%= metadata.name %>.sysconf.init'
			$<%= metadata.name %>_service_file		= '<%= metadata.name %>.init'
			## Settings
			$<%= metadata.name %>_settings_os			= { }
		}
		'RedHat': {
			### Packages
			$<%= metadata.name %>_package_name		= '<%= metadata.name %>'
			### Services
			$<%= metadata.name %>_service_name		= '<%= metadata.name %>'
			### Dirs
			$<%= metadata.name %>_config_dir			= '/etc/sysconfig'
			$<%= metadata.name %>_home_dir					= '/usr/local/<%= metadata.name %>'
			### Settings
			$<%= metadata.name %>_settings_os			= { }
			
			if $::operatingsystemmajrelease >= 7 {
				$<%= metadata.name %>_service_dir  	= '/usr/lib/systemd/system'
				$<%= metadata.name %>_config_file  	= '<%= metadata.name %>.sysconf.systemd'
				$<%= metadata.name %>_service_file 	= '<%= metadata.name %>.service'
			}else{
				$<%= metadata.name %>_service_dir		= '/etc/init.d'
				$<%= metadata.name %>_config_file		= '<%= metadata.name %>.sysconf.init'
				$<%= metadata.name %>_service_file	= '<%= metadata.name %>.init'
			}
		}
		default: {
			fail("${::operatingsystem} not supported")
		}
	}
	$<%= metadata.name %>_default_settings = merge($<%= metadata.name %>settings_all,$<%= metadata.name %>_settings_os)
}
