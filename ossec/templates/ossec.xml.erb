<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type='manifest' name='ossec'>
  <service name='application/ossec' type='service' version='1'>
    <create_default_instance enabled='false' />
    <single_instance />
    <exec_method type='method' name='start' exec='<%= @home_dir %>/bin/ossec-control start' timeout_seconds='60'/>
    <exec_method type='method' name='stop' exec='<%= @home_dir %>/bin/ossec-control stop' timeout_seconds='60' />
    <exec_method type='method' name='restart' exec='<%= @home_dir %>/bin/ossec-control restart' timeout_seconds='60' />
    <stability value='Stable' />
    <template>
      <common_name>
        <loctext xml:lang='C'> OSSEC 2.8.1 </loctext>
      </common_name>
      <documentation>
        <manpage title='ossec' section='8' manpath='/usr/local/share/man' />
      </documentation>
    </template>
  </service>
</service_bundle>
