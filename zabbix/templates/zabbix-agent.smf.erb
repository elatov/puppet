#!/bin/sh
CMD="<%= @homedir %>/sbin/zabbix_agentd"
CONF="<%= @agentd_conf_dir %>/zabbix_agentd.conf"
RETVAL=0
start() {
   echo "Starting Zabbix-agent: \c"
   $CMD -c $CONF &
   RETVAL=$?
   [ $RETVAL -eq 0 ] && echo "ok" || echo "failed"
   return $RETVAL
}
end() {
   echo "Stopping Zabbix-agent: \c"
   pkill zabbix_agentd
   RETVAL=$?
   [ $RETVAL -eq 0 ] && echo "ok" || echo "failed"
   return $RETVAL
}
case "$1" in
   start)
      start
      ;;
   stop)
      end
      ;;
   restart)
      end
      start
      ;;
   *)
      echo "Usage: $0 {start|stop|restart}"
      exit 1
esac
exit $RETVAL
